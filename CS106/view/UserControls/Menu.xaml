<UserControl x:Class="CS106.view.UserControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106.view.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Leave Request" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="1" Text="Salary Details" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="2" Text="Personal Details" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="3" Text="Company events/New" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="4" Text="Resignation" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="5" Text="Logout" FontSize="44"></TextBlock>
        <TextBlock Grid.Row="6" Text="Personal Details" FontSize="44"></TextBlock>
    </Grid>
</UserControl>
