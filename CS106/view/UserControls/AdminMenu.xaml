<UserControl x:Class="CS106.view.UserControls.AdminMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106.view.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="3" CornerRadius="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>


                <Button Grid.Row="0" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Manage Leave Request" FontSize="32" Click="ManageLeave"></Button>
                <Button Grid.Row="1" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Add to Roster" FontSize="32" Click="AddToRoster"></Button>
                <Button Grid.Row="2" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Edit Roster" FontSize="32" Click="EditRoster"></Button>
                <Button Grid.Row="3" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Edit Employee Details" FontSize="32" Click="EditEmployeeDetails" ></Button>
                <Button Grid.Row="5" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Logout" FontSize="32" ></Button>
                <Button Grid.Row="4" BorderBrush="Black" BorderThickness="2" Background="#0468BF" Content="Exit Employee Management" FontSize="32" Click="Exit"></Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
