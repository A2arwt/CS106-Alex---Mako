<Page x:Class="CS106.AdminLeaveRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:CS106.view.UserControls"
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLeaveRequest">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <userControls:Menu></userControls:Menu>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition  ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="80*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Center">Start Date</Label>
                <DatePicker Grid.Row="1" x:Name="StartDate"  HorizontalAlignment="Center"  VerticalAlignment="Top"/>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="80*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Center">Leave Type</Label>
                <ComboBox x:Name="LeaveTypeCombo" Grid.Row="1">
                    <ComboBoxItem Content="Annual Leave"/>
                    <ComboBoxItem Content="Sick Leave"/>
                    <ComboBoxItem Content="Bereavement Leave"/>
                    <ComboBoxItem Content="Maternity Leave"/>
                    <ComboBoxItem Content="Paternity Leave"/>
                    <ComboBoxItem Content="Unpaid Leave"/>
                </ComboBox>

            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"></RowDefinition>
                    <RowDefinition Height="80*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label HorizontalAlignment="Center">End Date</Label>
                <DatePicker Grid.Row="1" x:Name="EndDate"  HorizontalAlignment="Center"  VerticalAlignment="Top"/>

            </Grid>

            <Button Content="Submit"  Grid.Row="3" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Height="30" Width="94" Click="Submit"/>


        </Grid>
        

        

    </Grid>
    
</Page>
