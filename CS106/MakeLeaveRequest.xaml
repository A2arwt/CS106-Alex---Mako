<Page x:Class="CS106.AdminLeaveRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:CS106.view.UserControls"
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLeaveRequest">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <userControls:Menu></userControls:Menu>
        


        <DatePicker x:Name="StartDate" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
        <DatePicker x:Name="EndDate" Grid.Column="1" Margin="0,0,0,50" HorizontalAlignment="Center"  VerticalAlignment="Center"/>

        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Height="30" Width="94" Click="Submit"/>
        <Grid Grid.Column="1">
            <ComboBox x:Name="LeaveTypeCombo"
                        Width="200"
                        
                        Height="25"
                        FontSize="20"
  
                        HorizontalAlignment="Center" 
                        SelectionChanged="LeaveTypeCombo_SelectionChanged">
                <ComboBoxItem Content="Annual Leave"/>
                <ComboBoxItem Content="Sick Leave"/>
                <ComboBoxItem Content="Bereavement Leave"/>
                <ComboBoxItem Content="Maternity Leave"/>
                <ComboBoxItem Content="Paternity Leave"/>
                <ComboBoxItem Content="Unpaid Leave"/>
            </ComboBox>
        </Grid>
        
        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" CornerRadius="1" Margin="10">
            <Grid Margin="0,0,0,213" >
                
                <Rectangle Fill="#BBE2F2" Stroke="Black" StrokeThickness="2" Panel.ZIndex="-1"></Rectangle>
                <TextBlock FontSize="30" TextDecorations="Underline" HorizontalAlignment="Center" Grid.Row="1">Available leave</TextBlock>
                <ListView Background="Transparent" x:Name="shift_stack"></ListView>
            </Grid>
        </Border>

    </Grid>
    
</Page>
