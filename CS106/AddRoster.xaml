<Page x:Class="CS106.AddRoster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:CS106.view.UserControls"
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRoster">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <userControls:AdminMenu></userControls:AdminMenu>
        
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <ListView x:Name="workers_list" FontSize="55" ItemsSource="{Binding workers}" ></ListView>

            <DatePicker x:Name="date" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></DatePicker>

            <TextBox x:Name="start_time" Grid.Row="2"/>
            <TextBox x:Name="end_time" Grid.Row="3"/>
            <Button Content="submit" Click="Submit" Grid.Row="4"></Button>



        </Grid>
    </Grid>
</Page>
