<Page x:Class="CS106.AddRoster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRoster">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListView x:Name="workers_list" ItemsSource="{Binding workers}" ></ListView>
        <Calendar Grid.Column="1" Grid.Row="1"></Calendar>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="49*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="49*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"></TextBox>
            <TextBlock Text=":" FontSize="35" Grid.Column="1"></TextBlock>
            <TextBox Grid.Column="2"></TextBox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="49*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="49*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"></TextBox>
            <TextBlock Text=":" FontSize="35" Grid.Column="1"></TextBlock>
            <TextBox Grid.Column="2"></TextBox>
        </Grid>
        <Grid Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Manage Leave Request" FontSize="32" Click="LeaveRequestManagement"></Button>
            <Button Grid.Row="1" Content="Add to Roster" FontSize="32" ></Button>
            <Button Grid.Row="2" Content="Edit Roster" FontSize="32" Click="EditRoster"></Button>
            <Button Grid.Row="3" Content="Edit Employee Details" FontSize="32" Click="CompanyInfo"></Button>
            <Button Grid.Row="5" Content="Logout" FontSize="32" Click="Logout"></Button>
            <Button Grid.Row="4" Content="Exit Employee Management" FontSize="32" Click="Exit"></Button>
        </Grid>
        <Button Grid.Column="1" Grid.Row="4" Content="Submit" FontSize="44" Click="Submit"></Button>
    </Grid>
</Page>
