<Page x:Class="CS106.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid x:Name="plane">
        <TextBox x:Name="Username" HorizontalAlignment="Left" Margin="263,196,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="199" Height="29" FontSize="20">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="263,256,0,0" VerticalAlignment="Top" Width="199" Height="27">
            <PasswordBox.Effect>
                <DropShadowEffect/>
            </PasswordBox.Effect>
        </PasswordBox>
        <Button x:Name="LoginButton" Content="Continue" HorizontalAlignment="Left" Margin="410,301,0,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
        <Frame x:Name="Nav" NavigationUIVisibility="Automatic" Navigated="nav_Navigated"></Frame>

    </Grid>
</Page>
