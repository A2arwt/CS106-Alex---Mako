<Page x:Class="CS106.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106"      
      xmlns:userControls="clr-namespace:CS106.view.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <userControls:Mune></userControls:Mune>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle Fill="Blue" Panel.ZIndex="-1"></Rectangle>
            <TextBlock x:Name="welcame_text" FontSize="40"></TextBlock>
            <Rectangle Fill="Blue" Panel.ZIndex="-1" Grid.Row="1" ></Rectangle>
            <TextBlock FontSize="40" Grid.Row="1"> upcoming Events </TextBlock>
        </Grid>
        <Grid Grid.Column="2">
            <TextBlock></TextBlock>
            <StackPanel x:Name="shift_stack"></StackPanel>

        </Grid>

    </Grid>
    
    
</Page>
