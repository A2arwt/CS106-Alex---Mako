<Page x:Class="CS106.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid x:Name="pagelist">
            <Grid.RowDefinitions >
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Leave Request" FontSize="32" Click="LeaveRequest"></Button>
            <Button Grid.Row="1" Content="Salary Details" FontSize="32" Click="SalaryDetails"></Button>
            <Button Grid.Row="2" Content="Personal Details" FontSize="32" Click="PersonalDetails"></Button>
            <Button Grid.Row="3" Content="Company events/New" FontSize="32" Click="CompanyInfo"></Button>
            <Button Grid.Row="4" Content="Resignation" FontSize="32" Click="Resignation"></Button>
            <Button Grid.Row="5" Content="Logout" FontSize="32" Click="Logout"></Button>
            <Button Grid.Row="6" Content="Edit Employee" FontSize="32" Click="ExitEmployee"></Button>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle Fill="Blue" Panel.ZIndex="-1"></Rectangle>
            <TextBlock x:Name="welcame_text" FontSize="40"></TextBlock>
            <Rectangle Fill="Blue" Panel.ZIndex="-1" Grid.Row="1" ></Rectangle>
            <TextBlock FontSize="40" Grid.Row="1"> upcoming Events </TextBlock>
        </Grid>
        <Grid Grid.Column="2">
            <TextBlock></TextBlock>
            <StackPanel x:Name="shift_stack"></StackPanel>

        </Grid>

    </Grid>
    
    
</Page>
